{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "GCC build ergasia 1",
            "command": "/usr/bin/gcc",
            "args": [
                "-I",
                "${fileDirname}/../include",
                "-g",
                "${fileDirname}/../src/BF.c",
                "${fileDirname}/../src/murmur3.c",
                "-o",
                "${fileDirname}/../bf.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}